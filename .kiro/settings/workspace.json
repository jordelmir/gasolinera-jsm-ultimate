{
  "application": {
    "shellEnvironmentResolutionTimeout": 45,
    "autoInitializeEnvironment": true,
    "environmentScript": ".kiro/scripts/init-environment.sh"
  },
  "editor": {
    "defaultFormatter": "prettier",
    "formatOnSave": true,
    "autoSave": "afterDelay",
    "autoSaveDelay": 500
  },
  "terminal": {
    "defaultProfile": "development",
    "shellIntegration": true,
    "environmentResolution": {
      "timeout": 45,
      "retries": 3,
      "fallbackToSystem": true
    }
  },
  "workspace": {
    "monorepo": {
      "type": "nx-gradle-hybrid",
      "frontendRoot": "apps",
      "backendRoot": "services",
      "sharedRoot": "packages"
    },
    "autoDetectProjects": true,
    "indexing": {
      "enabled": true,
      "excludePatterns": [
        "**/node_modules/**",
        "**/build/**",
        "**/dist/**",
        "**/.gradle/**",
        "**/target/**",
        "**/.next/**",
        "**/.vercel/**",
        "**/*.pyc",
        "**/__pycache__/**"
      ]
    }
  },
  "development": {
    "hotReload": true,
    "autoRestartOnConfigChange": true,
    "debugMode": true,
    "logLevel": "debug"
  },
  "testing": {
    "autoRun": "onSave",
    "defaultCommand": "npm test",
    "watch": true
  },
  "security": {
    "dependencyVulnerabilityScan": "onStartup",
    "auditLogLevel": "high"
  },
  "integrations": {
    "git": {
      "autoFetch": true,
      "showInlineBlame": true,
      "autoStage": false
    },
    "docker": {
      "autoDetectContainers": true,
      "showContainerStatus": true
    },
    "mcp": {
      "autoConnect": true,
      "reconnectOnFailure": true,
      "logLevel": "INFO"
    }
  }
}